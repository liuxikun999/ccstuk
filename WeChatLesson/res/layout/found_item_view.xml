<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >
    
	<RelativeLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="15dp"
    	android:layout_marginRight="15dp"
    	android:layout_marginTop="2dp"
       >
       <ImageView 
            android:id="@id/find_more_friend_iv"
           	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
           />
       <TextView 
            android:id="@id/find_more_friend_tv"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_toRightOf="@id/find_more_friend_iv"
    		android:layout_marginLeft="12dp"
    		android:textSize="16sp"
    		android:text="@string/friend_photograph"/>
       <LinearLayout
            android:id="@id/find_more_divide_line"
           	android:layout_width="fill_parent"
    		android:layout_height="1dp"
    		android:layout_marginTop="36dp"
    		android:orientation="horizontal"
    		android:layout_below="@id/find_more_friend_tv"
            android:background="@color/chat_list_divider_color"
           ></LinearLayout>
   </RelativeLayout>
</LinearLayout>
