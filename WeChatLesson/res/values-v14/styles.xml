<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
         <item name="android:actionBarStyle">@style/my_actionbar_style</item>
         <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>  
    </style>
	<style name="my_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">  
        <item name="android:background">#303537</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
    </style>
    <style name="AcBar_titleStyle">    
        <item name="android:textColor">#cfcfcf</item>
        <item name="android:textSize">18sp</item>
    </style>  
    <style name="MyActionBarTabStyle">  
       <item name="android:paddingLeft">2dp</item>  
       <item name="android:paddingRight">2dp</item>
       <item name="android:maxWidth">10dp</item>
       <item name="android:width">10dp</item>
       <item name="android:columnWidth">10dp</item>
       <item name="android:background">#303537</item>
       
    </style>
    
     <style name="MyStyleAppBaseTheme" parent="@style/Theme.Sherlock.Light">
        <!-- API 14 theme customizations can go here. -->
         <item name="android:actionBarStyle">@style/my_actionbar_style</item>
         <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>  
    </style>
</resources>
